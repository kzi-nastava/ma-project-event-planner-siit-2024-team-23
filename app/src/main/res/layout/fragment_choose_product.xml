<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.events.event.createEventSteps.ChooseProductFragment">

    <!-- Toggle Button for switching -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggle_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:padding="8dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_services"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_category_arts_active"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/services"
            style="@style/CustomToggleButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/toggle_products"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableStart="@drawable/outline_shopping_bag_24"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:text="@string/products"
            style="@style/CustomToggleButton" />

    </com.google.android.material.button.MaterialButtonToggleGroup>


    <!-- RecyclerView to display content -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/service_card_horizontal" />

</LinearLayout>
